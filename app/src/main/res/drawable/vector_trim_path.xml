<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/status_on"
        android:drawable="@drawable/vector_bar"
        android:state_checked="true"/>

    <item
        android:id="@+id/status_off"
        android:drawable="@drawable/vector_search"
        android:state_checked="false"/>

    <transition
        android:fromId="@+id/status_on"
        android:toId="@+id/status_off"
        android:drawable="@drawable/animated_vector_search_to_bar"/>

    <transition
        android:fromId="@+id/status_off"
        android:toId="@+id/status_on"
        android:drawable="@drawable/animated_vector_bar_to_search"/>

</animated-selector>